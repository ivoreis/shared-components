{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap --hoist --force-local",
    "nuke": "npx rimraf node_modules && npm i && lerna exec \"rm -f package-lock.json npm-shrinkwrap.json\" && lerna clean --yes && lerna bootstrap && lerna exec --stream -- \"test -f package-lock.json || npm install --package-lock-only\"",
    "docz:dev": "lerna exec --scope '@scoped/documentation' npm run dev",
    "docz:serve": "lerna exec --scope '@scoped/documentation' npm run serve",
    "docz:build": "lerna run build --scope '@scoped/documentation' --stream",
    "version": "lerna version",
    "build": "lerna run build --ignore '@scoped/documentation'",
    "prebuild": "npm run copy:components",
    "copy:components": "npx copyfiles packages/**/documentation/components/*.mdx packages/documentation/src/components --exclude packages/documentation --flat"
  },
  "prettier": {
    "semi": false,
    "useTabs": false,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "devDependencies": {
    "@emotion/core": "^10.0.27",
    "copyfiles": "^2.2.0",
    "lerna": "^3.20.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.5"
  }
}
