{
  "name": "@ivoreis/react-alert",
  "version": "0.0.3",
  "description": "Example alert component",
  "author": "Ivo Reis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivoreis/shared-components.git"
  },
  "scripts": {
    "build": "pika build",
    "dev": "parcel example/index.html --open",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "theme-ui": "^0.3.1"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@emotion/core": "^10.0.27",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-axe": "^3.1.0",
    "@types/react-dom": "^16.9.5",
    "@types/theme-ui": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "jest": "^25.1.0",
    "parcel": "^1.12.4",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-axe": "^3.4.1",
    "react-dom": "^16.12.0",
    "typescript": "^3.7.5"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-bundle-types"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/pkg"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-react",
      "eslint-plugin-react-hooks",
      "jsx-a11y"
    ],
    "extends": [
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {}
  }
}
