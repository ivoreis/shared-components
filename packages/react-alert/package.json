{
  "private": false,
  "name": "@ivoreis/react-alert",
  "version": "0.1.0-alpha.1",
  "description": "Example alert component",
  "author": "Ivo Reis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivoreis/shared-components.git"
  },
  "scripts": {
    "build": "pika build",
    "dev": "parcel example/index.html --open",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "test:all": "npm run test && npm run type-check && npm run build"
  },
  "dependencies": {
    "theme-ui": "^0.3.1"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-bundle-types"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/pkg"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-react",
      "eslint-plugin-react-hooks",
      "jsx-a11y"
    ],
    "extends": [
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {}
  }
}
